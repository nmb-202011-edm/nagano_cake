<!--URL:/admin/orders-->

<h3>注文履歴一覧</h3>
<table class="table">

  <thead>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
  </thead>
  <tbody>
  <% @orders.each do |order| %>
    <tr>
      <td><%= link_to admin_order_path(order) do %>
        <%= order.created_at.to_s(:datetime_jp) %>
      <% end %></td>
      <td><%= order.customer.last_name %> <%= order.customer.first_name %></td>
      <!--注文商品の合計数-->
      <td><%= order.order_items.sum(:amount) %></td>
      <td><%= order.status_i18n %></td>
      <!--_i18nと記載することで、enum日本語化を反映-->
    </tr>
  </tbody>
  <% end %>
</table>