<!--URL:/admin/items/:id/edit-->


<%= form_with model: @item, url:admin_item_path, local: true do |f| %>
<h3>商品編集</h3>
  <p>
    <!--画像投稿-->
    <%= f.attachment_field :image %>
  </p>
  <p>
    <%= f.label :name, '商品名' %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :introduction, '商品説明'%>
    <%= f.text_area :introduction %>
  </p>
  <p>
      <div class="form-group">
        <%= f.label :genre_id, 'ジャンル' %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name %>
      </div>
  </p>
  <p>
    <%= f.label :price, '税抜き価格' %>
    <%= f.text_field :price %> 円
  </p>
  <div class="form-group">
    <%= f.label :is_active, '販売ステータス' %>
    <!--↓三項演算子という、単純なif文を一行で表す書き方、view上でtrue = 販売中を意味している記述↓-->
    <%= f.select :is_active, [['販売中',true],['売切れ',false]]%>
  </div>
  <div class="form-group">
    <%= f.submit '変更を保存', class: 'btn btn-primary' %>
  </div>

<% end %>