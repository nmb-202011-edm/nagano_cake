<!--URL:/admin/items/new-->

  <% if @item.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <ul>
        <% @item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<%= form_with model: @item, url:admin_items_path, local: true do |f| %>
<h3>商品新規登録</h3>

  <p>
    <!--商品画像-->
    <%= f.attachment_field :image %>
  </p>
  <p>
    <%= f.label :name, '商品名' %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :introduction, '商品説明'%>
    <%= f.text_area :introduction %>
  </p>
  <p>
      <div class="form-group">
        <%= f.label :genre_id, 'ジャンル' %>
        <%= f.collection_select :genre_id, @genres, :id, :name, :include_blank => "--選択してください--" %>
      </div>
  </p>
  <p>
    <%= f.label :price, '税抜き価格' %>
    <%= f.text_field :price %> 円
  </p>
  <div class="form-group">
    <%= f.label :is_active, '販売ステータス' %>
    <%= f.select :is_active, {'販売中': true, '売切れ': false} %>
  </div>
  <div class="form-group">
    <%= f.submit '新規投稿', class: 'btn btn-primary' %>
  </div>

<% end %>