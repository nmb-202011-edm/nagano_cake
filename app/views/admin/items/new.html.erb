<!--URL:/admin/items/new-->


<%= form_with model: @item, url:admin_items_path, local: true do |f| %>
<h3>商品新規登録</h3

  <p>
    <%= f.attachment_field :image %>
  </p>

  <p>
    <%= f.label :name, '商品名' %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :introduction, '商品説明'%>
    <%= f.text_area :introduction %>
  </p>

  <p>
      <div class="form-group">
        <%= f.label :genre_id, 'ジャンル' %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, :include_blank => "カテゴリを選択してください" %>
      </div>
  </p>
  
  <p>
    <%= f.label :price, '税抜き価格' %>
    <%= f.text_field :price %> 円
  </p>

  <h2>ステータス</h2>
  
  <div class="form-group">
    <%= f.submit '新規投稿', class: 'btn btn-primary btn-block' %>
  </div>
  
  

<% end %>