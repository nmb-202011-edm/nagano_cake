<div class="row">
  <div calss="col-lg-12">
    <h2 class="head-line title_h2 text-center">
      <%= @customer.last_name + @customer.first_name %>さんの会員情報編集
    </h2>
      <%= form_with(model: @customer, url:admin_customer_path, local: true ,method: :patch) do |f| %>
        <div class="col-lg-12">
          <div class="form-group col-lg-6">
            <%= f.label :"会員ID", class: "col-lg-6 control-label" %>
            <%= f.label :"#{@customer.id}" %>
          </div>
          <div class="form-group col-lg-9">
            <%= f.label :"氏名", class: "col-lg-4 control-label" %>
            <%= f.text_field :last_name, class: "col-md-3 form-control-static name" %>
            <%= f.text_field :first_name, class: "col-md-3 form-control-static name" %>
          </div>
          <div class="form-group col-md-9">
            <%= f.label :"フリガナ", class: "col-md-4 control-label" %>
            <%= f.text_field :last_name_kana, class: "col-md-3 form-control-static name" %>
            <%= f.text_field :_name_kana, class: "col-md-3 form-control-static name" %>
          </div>
          <div class="form-group col-md-9">
            <%= f.label :"住所", class: "col-md-3 control-label" %>
            <%= f.text_field :address, class: "col-md-8 form-control-static name" %>
          </div>
          <div class="form-group col-md-9">
            <%= f.label :"TEL", class: "col-md-3 control-label" %>
            <%= f.text_field :telephone_number, class: "col-md-8 form-control-static name" %>
          </div>
          <div class="form-group col-md-9">
            <%= f.label :"Email", class: "col-md-4 control-label" %>
            <%= f.text_field :email, class: "col-md-6 form-control-static name" %>
          </div>
          <div class="form-group col-md-9">
            <%= f.label :"ステータス", class: "col-md-4 control-label" %>
            　<%= f.radio_button :is_deleted, false %>
            　<%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
            　<%= f.radio_button :is_deleted, true %>
            　<%= f.label :is_deleted, "退会済", {value: :true, style: "display: inline-block;"} %>
          </div>
        </div>
          <div class="actions  col-md-9 col-md-offset-4">
            <%= f.submit '変更を保存する' ,class: "btn btn-primary" %>
          </div>
      <% end %>
    <div class="col-md-12">
      <%= link_to "戻る", admin_customer_path, class: "glyphicon glyphicon-home btn btn-info" %>
    </div>
  </div>
</div>
