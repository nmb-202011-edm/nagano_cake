<% provide(:title, "会員情報編集") %>
<div class="row">
  <div calss="col-xs-12">
    <!--%= render "layouts/error_messages", resource: @customer %>-->
    <h2 class="head-line title_h2 text-center">
      <%= @customer.last_name %>さんの会員情報編集
    </h2>

  <%= form_with(model: @customer, url:admin_customer_path, local: true ,method: :patch) do |f| %>

    <div class="col-md-10">
      <div class="form-group col-md-9">
        <%= f.label :"会員ID", class: "col-md-4 control-label" %>
        <%= f.label :"#{@customer.id}" %>
      </div>

      <div class="form-group col-md-9">
        <%= f.label :"氏名", class: "col-md-4 control-label" %>
        <%= f.text_field :last_name, class: "col-md-3 form-control-static name" %>
        <%= f.text_field :first_name, class: "col-md-3 form-control-static name" %>
      </div>

      <div class="form-group col-md-9">
        <%= f.label :"フリガナ", class: "col-md-4 control-label" %>
        <%= f.text_field :kana_last_name, class: "col-md-3 form-control-static name" %>
        <%= f.text_field :kana_first_name, class: "col-md-3 form-control-static name" %>
      </div>

        <!--%= render "form_customer", f: f %>-->
        <!--%= render "form_mail", f: f %>-->



    </div>
      <div class="actions  col-md-9 col-md-offset-4">
        <%= f.submit '変更を保存する' ,class: "btn btn-primary" %>
      </div>
  <% end %>
    <div class="col-md-12">
      <%= link_to "戻る", admin_customer_path, class: "glyphicon glyphicon-home btn btn-info" %>
    </div>
  </div>
</div>
