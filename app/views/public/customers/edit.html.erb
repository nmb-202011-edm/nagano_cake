<h2>登録情報編集</h2>

<%= form_with model: @customer, url: customers_path, local: true do |f| %>

　<!--氏名（_name_kana注意）-->
　<div class="field">
    <%= f.label :名前 %>
    <%= f.label :（姓） %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    <%= f.label :（名） %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    <%= f.label :フリガナ %>
    <%= f.label :（セイ） %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    <%= f.label :（メイ） %>
    <%= f.text_field :_name_kana, autofocus: true, autocomplete: "_name_kana" %>
  </div>
  <!--メールアドレス-->
  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
  <%= f.label :郵便番号（ハイフン無し） %>
  <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
  <%= f.label :住所 %>
  <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
  <%= f.label :電話番号 %>
  <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>


  <div class="actions">
    <%= f.submit "編集内容を保存する" %>
    <%= link_to '退会する', customers_path %>
  </div>

<% end %>





