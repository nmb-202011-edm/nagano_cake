<div class="container">
  <div class="row">
    <div class="col-lg-">
      
      <h1>ここは配送先登録/一覧画面です。</h1>
      
      <%# if false %>
      
      <%= form_with model:@address,url:"/addresses",local:true do |f| %>
      
          <%= f.label :郵便番号 %>
          <%= f.text_field :postal_code, class: 'form-control book_title' %>
      
          <%= f.label :住所%>
          <%= f.text_field :address, class: 'form-control book_title' %>
      
          <%= f.label :宛名%>
          <%= f.text_field :name, class: 'form-control book_title' %>
      
          <%= f.submit class: 'btn btn-success' %>
      
      <% end %>
      
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
      
        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to 'Edit', edit_address_path(address), method: :get, class: "btn btn-sm btn-danger"%>
                <%= link_to 'Destroy', address_path(address), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
<%# end %>

    </div>
  </div>
</div>