  <!--URL:/items-->

  <% if params[:genre_id].blank? %>
  	  <h3>商品一覧</h3>
  <% else %>
    <h3><%= @genre.name %>一覧</h3>
  <% end %>
  <table>
    <% @items.each do |item| %>
      <tr>
        
        <td><%= link_to item_path(item) do %><%= attachment_image_tag item, :image, format: 'jpeg', size: "200x200" %><% end %></td>
        <td><%= link_to item.name, item_path(item) %></td>
        
        <td>￥<%= item.price %></td>
      </tr>
    <% end %>
    </table>

    <h3>ジャンル検索</h3>
    <% @genres.each do |genre| %>
       <%= link_to genre.name, items_path(genre_id: genre.id) %>
    <% end %>