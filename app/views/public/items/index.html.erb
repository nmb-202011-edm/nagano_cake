 <!DOCTYPE html>

  <!--URL:/items-->
<div class="top-item-name">
<% if params[:genre_id].blank? %>
 <h3>商品一覧</h3>
<% else %>
 <h3><%= @genre.name %>一覧</h3>
<% end %>
</div>

<% @items.each do |item| %>
 <div class="item-box">
  <div class="item-item"><%= link_to item_path(item) do %><%= attachment_image_tag item, :image, format: 'jpeg', size: "200x200" %><% end %></div>
  <h3 class="item-name"><%= link_to item.name, item_path(item) %></h3>
  <h4 class="item-price">￥<%= item.price %></h4>
 </div>
<% end %>


    <h4>ジャンル検索</h4>
    <% @genres.each do |genre| %>
       <%= link_to genre.name, items_path(genre_id: genre.id) %>
    <% end %>