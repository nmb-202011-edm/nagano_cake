 <!DOCTYPE html>

  <!--URL:/items-->
<div class = "row">
    <% if params[:genre_id].blank? %>
      <i class="fas fa-utensils fa-3x"></i><h3>商品一覧</h3>
    <% else %>
      <h3><%= @genre.name %>一覧</h3>
    <% end %>
</div>

<div class = "row">
  <div class = col-md-2>
    <div class = "sidebar_fixed">
      <table class="table table-striped">
        <thead class="thead-dark">
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
             <td><%= link_to genre.name, items_path(genre_id: genre.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class = col-md-10>
    <div class = "row">
      <% @items.each do |item| %>
        <div class = col-md-3>
        <div class="item-box">
          <div class="item-item"><%= link_to item_path(item) do %><%= attachment_image_tag item, :image, format: 'jpeg', size: "200x200" %><% end %></div>
          <h5 class="item-name"><%= link_to item.name, item_path(item) %></h5>
          <h6 class="item-price">￥<%= item.price.to_s(:delimited) %></h6>
        </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
