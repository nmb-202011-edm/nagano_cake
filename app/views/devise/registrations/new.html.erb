<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div>
 <div>
  <span>
   <i class="fas fa-kiwi-bird fa-3x"></i>
   <h2>新規会員登録</h2><br>
  </span>
  <form>
   <fieldset class="form-group">
    <div class="form-group">
     <label>名前</label><br>
     <label>(姓)</label>
     <%= f.text_field :last_name, autofocus: true, class:"form-control"%>
     <label>(名)</label>
     <%= f.text_field :first_name, autofocus: true, class:"form-control"%>
    </div>
    <div class="form-group">
     <label>フリガナ</label><br>
     <label>(セイ)</label>
     <%= f.text_field :last_name_kana, autofocus: true, class:"form-control"%>
     <label>(メイ)</label>
     <%= f.text_field :first_name_kana, autofocus: true, class:"form-control"%>
  　</div>
    <div class="form-group">
     <label>メールアドレス</label>
     <%= f.email_field :email, autofocus: true, class:"form-control" %>
    </div>
    <div class="form-group">
     <label>郵便番号（ハイフン無し）</label>
     <%= f.text_field :postal_code, autofocus: true, class:"form-control"%>
    </div>
    <div class="form-group">
     <label>住所</label>
     <%= f.text_field :address, autofocus: true, class:"form-control" %>
    </div>
    <div class="form-group">
     <label>電話番号</label>
     <%= f.text_field :telephone_number, autofocus: true, class:"form-control" %>
    </div>
    <div class="form-group">
     <label>パスワード</label>
     <% if @minimum_password_length %>
     <em>(<%= @minimum_password_length %>文字以上)</em>
     <% end %>
     <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
    </div>
    <div class="form-group">
     <label>パスワード(確認用)</label>
     <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
    </div>
    <%= f.submit "新規登録", class:'btn btn-outline-info' %>
   </div><br><br>
   <h2>既に登録済みの方</h2>
  <%= render "devise/shared/links" %>
  </form>
 </div>

</div>

<% end %>
