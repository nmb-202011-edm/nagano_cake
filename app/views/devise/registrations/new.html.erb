<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <!--氏名追加-->
  <div class="field">
    <%= f.label :名前 %>
    <%= f.label :（姓） %>
    <%= f.text_field :last_name, autofocus: true %>
    <%= f.label :（名） %>
    <%= f.text_field :first_name, autofocus: true %>
   
  </div>

  <div class="field">
    <%= f.label :フリガナ %>
    <%= f.label :（セイ） %>
    <%= f.text_field :last_name_kana, autofocus: true %>
    <%= f.label :（メイ） %>
    <%= f.text_field :_name_kana, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <!--郵便番号追加-->
  <div class="field">
    <%= f.label :郵便番号（ハイフン無し） %>
    <%= f.text_field :postal_code, autofocus: true %>
  </div>

  <!--住所追加-->
  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true %>
  </div>

  <!--電話番号追加-->
  <div class="field">
    <%= f.label :電話番号 %>
    <%= f.text_field :telephone_number, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<%= render "devise/shared/links" %>
